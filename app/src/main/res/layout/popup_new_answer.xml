<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/input_answer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/addAnswerHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_answer_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/saveAnswerButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_answer"
        app:layout_constraintVertical_bias="0.129" />

    <Switch
        android:id="@+id/right_answer_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rightAnswerSwitch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_answer_button" />
</androidx.constraintlayout.widget.ConstraintLayout>