<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    tools:context=".flashcards.DoFlashcardsActivity">

    <LinearLayout
        android:id="@+id/flashcard_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/do_flashcards_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/do_flashcards_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/do_flashcards_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doFlashcardSetTitle" />

            <Button
                android:id="@+id/do_flashcards_done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doFlashcardSetDoneButton"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="4dp" />
        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/do_flashcards_view_pager"
        android:layout_width="351dp"
        android:layout_height="636dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="38dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashcard_toolbar_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>