<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_course_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/it_title_course_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#C1BCBC"
                android:padding="10dp"
                android:text="@string/itemCourseTitle"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:id="@+id/it_menu_course_grid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:src="@drawable/ic_kabob_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/it_code_course_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C1BCBC"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:text="@string/itemCourseCode" />

    </LinearLayout>
</androidx.cardview.widget.CardView>